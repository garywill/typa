<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="10dp" >
	<ImageView android:id="@+id/chatFragmentContactPhoto"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_alignParentLeft="true"
		android:contentDescription="@string/contact_photo"
		android:layout_marginRight="10dp" />
	
	<ImageView android:id="@+id/chatFragmentContactStatus"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_alignParentRight="true"
		android:contentDescription="@string/presence_available"/>

	<TextView android:id="@+id/chatFragmentContactName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/chatFragmentContactPhoto"
		android:layout_toLeftOf="@id/chatFragmentContactStatus"
		android:singleLine="true" />

	<TextView android:id="@+id/chatFragmentContactLastMessage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/chatFragmentContactPhoto"
		android:layout_below="@id/chatFragmentContactName"
		android:layout_toLeftOf="@id/chatFragmentContactStatus"
		android:singleLine="true"/>

</RelativeLayout>
